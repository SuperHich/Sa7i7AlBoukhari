<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="560px"
    android:layout_height="wrap_content"
    android:background="#fff" >

    <TextView
        android:id="@+id/text"
        android:layout_width="560px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:layout_margin="10px"
        android:textColor="#000" />

    <Button
        android:id="@+id/btn_showMore"
        android:layout_width="109px"
        android:layout_height="31px"
        android:layout_below="@+id/text"
        android:layout_marginLeft="30px"
        android:layout_marginTop="10px"
        android:background="@drawable/more_selector" />

    <Button
        android:id="@+id/btn_removeFav"
        android:layout_width="113px"
        android:layout_height="36px"
        android:layout_below="@+id/text"
        android:layout_marginLeft="15px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@+id/btn_showMore"
        android:background="@drawable/cancel_fav_selector" />

    <View  
        android:layout_width="560px"
        android:layout_height="15px"
        android:layout_below="@+id/btn_showMore"/>
</RelativeLayout>