<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff" >

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textColor="#000" />

    <Button
        android:id="@+id/btn_showMore"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/text"
        android:layout_marginTop="5dp"
        android:background="@drawable/more" />

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="617px"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_showMore"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_share"
            android:layout_width="148px"
            android:layout_height="43px"
            android:background="@drawable/share_hadith"/>
        
        <Button
            android:id="@+id/btn_comment"
            android:layout_width="101px"
            android:layout_height="43px"
            android:background="@drawable/comment_hadith" />

        <Button
            android:id="@+id/btn_favorite"
            android:layout_width="126px"
            android:layout_height="43px"
            android:background="@drawable/favourite_hadith"/>

        <Button
            android:id="@+id/btn_download"
            android:layout_width="116px"
            android:layout_height="43px"
            android:background="@drawable/download_hadith" />

        <Button
            android:id="@+id/btn_listen"
            android:layout_width="126px"
            android:layout_height="43px"
            android:background="@drawable/listen_hadith" />
    </LinearLayout>

</RelativeLayout>